<%= form_with(model: movie) do |f| %>
  <%= render 'shared/errors', object: movie%>
  <%= f.label :title %>
  <%= f.text_field :title, autofocus: true %>

  <%= f.label :description %>
  <%= f.text_area :description, rows: 5 %>

  <%= f.label :rating %>
  <%= f.select :rating, Movie::RATINGS, prompt: 'Please select one' %>

  <%= f.label :total_gross %>
  <%= f.number_field :total_gross, step: 1 %>

  <%= f.label :released_on %>
  <%= f.date_field :released_on, {class: 'date'} %>

  <%= f.label :director %>
  <%= f.text_field :director %>

  <%= f.label :duration %>
  <%= f.text_field :duration %>

  <%= f.label :poster_image %>
  <%= f.file_field :poster_image %>

  <div class="checkboxes">
    <%= f.collection_check_boxes :genre_ids, Genre.all, :id, :name %>
  </div>

  <%=f.submit%>

<%end%>