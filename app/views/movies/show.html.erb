<section class="movie-details">
  <div class="image">
    <%= image_tag(@movie.image_file_name)%>
  </div>
  <div class="details">
      <h1> <%= @movie.title %></h1>
      <h2> 
        <%= release_date(@movie) %> &bull; <%= @movie.rating%>
      </h2>
      <div class="reviews">
        <span class="stars">        
          <%= render 'shared/stars', percent: @movie.average_stars_percent%>
        </span> 
        <%= link_to pluralize(@movie.reviews.size, 'Review'), movie_reviews_path(@movie) %>
      </div>      
      <p>
        <%= @movie.description%>
      </p>
      <table>
        <tr>
          <th>Director:</th>
          <td><%= @movie.director%></td>
        </tr>        
        <tr>
          <th>Duration:</th>
          <td><%= @movie.duration%></td>
        </tr>
        <tr>
          <th>Total Gross:</th>
          <td><%= total_gross(@movie)%></td>
        </tr>
      </table>
      <div class="review">
        <%= link_to 'Add Review', new_movie_review_path(@movie)%>
      </div>
      <div class="review">
        <%= render 'reviews/form', movie: @movie, review: @movie.reviews.new %>
      </div>
  </div>
</section>
<section class="admin">
  <%= link_to "Edit", edit_movie_path(@movie), class: "button"%>
  <%= link_to "Delete", @movie, class: "button",
    data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
  %>
</section>